# Environment
ENVIRONMENT=development  # development, staging, production

# Application
APP_NAME=Sentinel
APP_VERSION=1.0.0
DEBUG=True
API_PREFIX=/api/v1

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4

# AWS
AWS_REGION=eu-west-2
AWS_ACCOUNT_ID=108101918328

# Database (PostgreSQL)
# Get from: aws secretsmanager get-secret-value --secret-id sentinel/production/rds/credentials --region eu-west-2
DATABASE_URL=postgresql://sentineladmin:PASSWORD@sentinel-postgres-prod.c7qgu0iqks5u.eu-west-2.rds.amazonaws.com:5432/sentinel_production
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# Redis
# Get from: aws secretsmanager get-secret-value --secret-id sentinel/production/redis/auth-token --region eu-west-2
REDIS_URL=rediss://:AUTH_TOKEN@sentinel-redis-prod.ecl9cq.0001.euw2.cache.amazonaws.com:6379
REDIS_MAX_CONNECTIONS=50
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5

# Secrets Manager
RDS_SECRET_NAME=sentinel/production/rds/credentials
REDIS_SECRET_NAME=sentinel/production/redis/auth-token
JWT_SECRET_NAME=sentinel/production/jwt/secret
XERO_SECRET_NAME=sentinel/production/xero/oauth
TWILIO_SECRET_NAME=sentinel/production/twilio/credentials
SENDGRID_SECRET_NAME=sentinel/production/sendgrid/api-key

# JWT
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Magic Link Auth
MAGIC_LINK_EXPIRE_MINUTES=15
MAGIC_LINK_BASE_URL=http://localhost:3000

# Xero Integration
XERO_CLIENT_ID=your-xero-client-id
XERO_CLIENT_SECRET=your-xero-client-secret
XERO_REDIRECT_URI=http://localhost:8000/api/v1/auth/xero/callback
XERO_SCOPES=accounting.transactions accounting.contacts accounting.attachments offline_access

# Twilio (SMS/WhatsApp)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+44xxxxxxxxxx
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# SendGrid (Email)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@sentinel.com
SENDGRID_FROM_NAME=Sentinel

# S3 (Document Storage)
S3_BUCKET_NAME=sentinel-documents-prod
S3_REGION=eu-west-2
S3_PRESIGNED_URL_EXPIRY=3600

# AWS Textract (OCR)
TEXTRACT_REGION=eu-west-2

# Celery (Task Queue)
CELERY_BROKER_URL=rediss://:AUTH_TOKEN@sentinel-redis-prod.ecl9cq.0001.euw2.cache.amazonaws.com:6379/0
CELERY_RESULT_BACKEND=rediss://:AUTH_TOKEN@sentinel-redis-prod.ecl9cq.0001.euw2.cache.amazonaws.com:6379/0
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_TIMEZONE=UTC
CELERY_ENABLE_UTC=True

# Xero Sync Settings
XERO_SYNC_INTERVAL_MINUTES=60
XERO_RATE_LIMIT_PER_MINUTE=60

# Chase Settings
CHASE_DEFAULT_FREQUENCY_DAYS=7
CHASE_DEFAULT_ESCALATION_DAYS=14
CHASE_MAX_RETRY_ATTEMPTS=3

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Feature Flags
FEATURE_VOICE_AI_ENABLED=True
FEATURE_WHATSAPP_ENABLED=True
FEATURE_AUTO_EXCLUSION_ENABLED=True
